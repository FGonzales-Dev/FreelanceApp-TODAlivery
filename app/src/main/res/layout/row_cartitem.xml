<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGray01"
    android:padding="5dp">

    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product: "
        android:layout_alignParentStart="true"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/itemTitleTv"
        android:layout_toEndOf="@id/titleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textColor="@color/black"/>



    <LinearLayout
        android:id="@+id/llll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemTitleTv">


        <TextView
            android:id="@+id/priceLabel"
            android:layout_width="wrap_content"
            android:layout_below="@+id/titleLabel"
            android:layout_height="wrap_content"
            android:text="Item: "
            android:layout_alignParentStart="true"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/itemPriceEachTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/Kg"
            android:textColor="@color/black"
            android:paddingEnd="10dp"/>

        <TextView
            android:id="@+id/quantityLabel"
            android:layout_width="wrap_content"
            android:layout_below="@+id/titleLabel"
            android:layout_height="wrap_content"
            android:text="Quantity: "
            android:layout_alignParentStart="true"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/itemQuantityTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="[2]"
            android:textColor="@color/black"
            android:paddingEnd="10dp"/>


        <TextView
            android:id="@+id/tpriceLabel"
            android:layout_width="wrap_content"
            android:layout_below="@+id/titleLabel"
            android:layout_height="wrap_content"
            android:text="Total Price: "
            android:layout_alignParentStart="true"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/itemPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemTitleTv"
            android:layout_toEndOf="@id/priceLabel"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/itemRemoveTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llll"
        android:layout_alignParentEnd="true"
        android:text="Remove"
        android:textColor="@color/color_Red" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/itemRemoveTv"
        android:layout_marginTop="4dp"
        android:background="@color/green" />



</RelativeLayout>