<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    app:cardElevation="3dp"
    app:contentPadding="10dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/adminUserprofilelv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:scaleType="fitCenter"
            android:src="@drawable/todalogo" />

        <RelativeLayout
            android:id="@+id/boxrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/nextIv"
            android:layout_toEndOf="@id/adminUserprofilelv"
            android:orientation="vertical">


            <TextView
                android:id="@+id/adminUsernameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="Item Name"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adminUseremailTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/adminUsernameTv"
                android:layout_marginEnd="25dp"
                android:text="1 Kg"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="italic" />

            <RelativeLayout
                android:id="@+id/rrrrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adminUseremailTv"
                android:layout_centerInParent="true"
                android:layout_marginTop="1dp">

                <TextView
                    android:id="@+id/discountedNoteTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/shape_tabs03"
                    android:padding="5dp"
                    android:text="20% OFF"
                    android:textColor="@color/green"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/discountedPriceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="15dp"
                    android:text="₱ 80.00"
                    android:textColor="@color/colorGray02"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/originalPriceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/discountedPriceTv"
                    android:text="₱ 100.00"
                    android:textColor="@color/colorGray02"
                    android:textStyle="italic" />
            </RelativeLayout>

            <TextView
                android:id="@+id/descriptionTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rrrrl"
                android:maxLines="2"
                android:minLines="2"
                android:text="Description"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/addToCartTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/descriptionTv"
                android:layout_alignParentEnd="true"
                android:drawableStart="@drawable/atc"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="Add To Cart"
                android:textColor="@color/colorPrimary" />


        </RelativeLayout>
        
        <ImageView
            android:id="@+id/nextIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:src="@drawable/next"
            android:layout_marginEnd="5dp"/>



    </RelativeLayout>




</androidx.cardview.widget.CardView>
