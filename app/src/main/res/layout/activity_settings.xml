<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rec01"
        android:padding="10dp">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/back_btn"
            android:id="@+id/backBTN"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:text="General"
        android:textColor="@color/colorGray02"/>

    <RelativeLayout
        android:id="@+id/RlViewProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/profileTvClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Profile"
            android:textColor="@color/black"
            android:paddingBottom="5dp"
            android:background="@color/white"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/profileTvDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileTvClick"
            android:background="@color/white"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:text="Check Your Profile Information"
            android:textColor="@color/colorGray02" />

        <View
            android:id="@+id/viewbotprofile"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/profileTvDetails"
            android:background="@color/colorGray01" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RlsignOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/signOutTvClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewbotprofile"
                android:background="@color/white"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="Sign out"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/signOutDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signOutTvClick"
                android:background="@color/white"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="Sign out your account"
                android:textColor="@color/colorGray02" />
            <View
                android:id="@+id/viewbotsignout"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray01"
                android:layout_below="@id/signOutDetails"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Nofifs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/notifDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewbotsignout"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:text="Notifications"
                android:textColor="@color/colorGray02" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/fcmSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/notifDetails"
                android:background="@color/white"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:fitsSystemWindows="true"
                app:switchMinWidth="55dp"
                android:paddingBottom="5dp"
                android:text="Push Notifications" />

            <TextView
                android:id="@+id/notificationStatusTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fcmSwitch"
                android:background="@color/white"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="Notifications are disabled"
                android:textColor="@color/colorGray02" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray01"
                android:layout_below="@id/notificationStatusTv"/>

        </RelativeLayout>



</LinearLayout>